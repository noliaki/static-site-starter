<meta name="twitter:card" content="<%= typeof twitterCard !== 'undefined' ? twitterCard : 'summary_large_image' %>">
<% if (typeof twitterSite !== 'undefined') { %>
  <meta name="twitter:site" content="@site_account">
<% } %>
<% if (typeof twitterCreator !== 'undefined') { %>
  <meta name="twitter:creator" content="@individual_account">
<% } %>
<meta name="twitter:url" content="<%= typeof twitterUrl !== 'undefined' ? twitterUrl : URL %>">
<meta name="twitter:title" content="<%= typeof twitterTitle !== 'undefined' ? twitterTitle : title %>">
<meta name="twitter:description" content="<%= typeof twitterDescription !== 'undefined' ? twitterTitle : description %>">
<% if (typeof twitterImage !== 'undefined') { %>
  <meta name="twitter:image" content="<%= twitterImage %>">
<% } %>
<% if (typeof twitterImageAlt !== 'undefined') { %>
  <meta name="twitter:image:alt" content="<%= description %>">
<% } %>
