include /variables

//- ------------------------------------
//- include local variables
//-
append variables
  -
    const URL = `${protocol}://${domain}/${locals.filePath.replace(/(\.pug)$/, '.html')}`

//- ------------------------------------
//- HTML CONTENTS
//-
doctype html
html(lang="ja")

  //- ------------------------------------
  //- include head element
  //-
  include /head/index

  //- ------------------------------------
  //- begin body
  //-
  body
    //- include global header
    include /global-header/index
    main
      block content
    //- include global footer
    include /global-footer/index

    //- script
    block scripts
